<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="209dp"
        android:background="@drawable/bg_tanchuang_06_3_1_1"
        android:layout_marginTop="82dp"
        android:layout_marginStart="250dp"
        android:orientation="vertical">





        <TextView
            android:id="@+id/biaoji__name"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:text="查询学生"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="39dp">

            <ImageButton
                android:id="@+id/tanchuang_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/biaoyang1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"/>

            <ImageButton
                android:id="@+id/tanchuang_dgj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/daigaijin1"
                android:layout_marginTop="10sp"
                android:layout_marginStart="79dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/tanchuang_grid"
                android:layout_width="262dp"
                android:layout_height="100dp"
                android:numColumns="4"
                android:layout_marginTop="15dp"
                android:layout_marginStart="19dp"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/chaxun_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/close_06_3_1_1"
        android:layout_marginTop="91dp"
        android:layout_marginStart="512dp"/>



</RelativeLayout>