<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_page"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_add_04bg"
        android:clipChildren="false">

        <ImageView
            android:layout_width="111dp"
            android:layout_height="38.9dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/profile_all" />



        <FrameLayout

            android:id="@+id/fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="71dp"
            android:gravity="center" />

        <ImageView
            android:layout_width="493dp"
            android:layout_height="47dp"
            android:layout_marginStart="154dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/botton_direction_04" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="319dp"
            android:layout_marginTop="313.3dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bt_student"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_class_interactions" />

            <TextView
                android:id="@+id/student_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生情况"
                android:textColor="#ffffc24c"
                android:textSize="8sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="385dp"
            android:layout_marginTop="313.1dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="6dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bt_class_tv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_class_interactions" />

            <TextView
                android:id="@+id/class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课堂互动"
                android:textColor="#ffffffff"
                android:textSize="8sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="451dp"
            android:layout_marginTop="313.1dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bt_classroom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_class_interactions" />


            <TextView
                android:id="@+id/classroom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级管理"
                android:textColor="#ffffffff"
                android:textSize="8sp" />


        </LinearLayout>


    </RelativeLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

</androidx.constraintlayout.widget.ConstraintLayout>