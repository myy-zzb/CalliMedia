<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chinese_character_query">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="578dp"
            android:layout_height="310dp"
            android:background="@drawable/hanzibg"
            />





        <ImageView
            android:layout_width="21dp"
            android:layout_height="24dp"
            android:background="@drawable/sh"
            android:layout_marginTop="53dp"
            android:layout_marginStart="509dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/pz"
            android:layout_marginTop="53dp"
            android:layout_marginStart="540.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ff000000"
            android:layout_marginTop="139dp"
            android:layout_marginStart="22dp"
            android:text="历史搜索"
            />

        <TextView
            android:id="@+id/zidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:text="字典"
            android:layout_marginTop="95dp"
            android:layout_marginStart="188dp" />

        <ImageView
            android:id="@+id/zidian_tiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tiao"
            android:layout_marginTop="122dp"
            android:layout_marginStart="198dp"/>

        <TextView
            android:id="@+id/beitie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:text="碑帖"
            android:layout_marginTop="95dp"
            android:layout_marginStart="354dp"/>

        <ImageView
            android:id="@+id/beitie_tiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tiao"
            android:layout_marginTop="122dp"
            android:layout_marginStart="365dp"/>
        
        
        <GridView
            android:id="@+id/hanzi_grid"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_marginTop="131dp"
            android:layout_marginStart="100dp"
            android:numColumns="5"/>


        <EditText
            android:id="@+id/hanzichaxun"
            android:layout_width="478dp"
            android:layout_height="39dp"
            android:background="@drawable/in_search_05_5"
            android:layout_marginTop="45dp"
            android:layout_marginStart="22dp"
            android:hint="请输入搜索单字"
            android:textColorHint="#ff9393aa"
            android:textSize="12sp"
            android:paddingStart="56dp"
            android:singleLine="true"/>
        
        
        <ImageView
            android:layout_width="61dp"
            android:layout_height="26dp"
            android:background="@drawable/cusi"
            android:layout_marginTop="170dp"
            android:layout_marginStart="25dp"/>


    </RelativeLayout>

</FrameLayout>