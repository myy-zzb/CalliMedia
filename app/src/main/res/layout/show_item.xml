<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:paddingStart="150dp">



        <ImageButton
            android:id="@+id/show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_enter_04"
            android:layout_marginTop="161dp"
            android:layout_marginStart="49.5dp"/>


        <ImageView
            android:id="@+id/show_bg"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/xiaoren"/>

        <TextView
            android:id="@+id/show_title"
            android:layout_width="90dp"
            android:layout_height="16dp"
            android:textSize="12sp"
            android:textColor="#99000000"
            android:text="进入学习展示"
            android:layout_marginTop="171dp"
            android:layout_marginStart="56dp"
            android:gravity="center"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="163dp">
            <ImageView
                android:id="@+id/show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv"
                />


            <ImageView
                android:id="@+id/fenmian1"
                android:layout_width="274dp"
                android:layout_height="175dp"
                android:layout_marginTop="27.4dp"
                android:layout_marginStart="29.3dp"
                android:background="@drawable/bihuawenda"
                />




        </RelativeLayout>









    </RelativeLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>