<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv"/>


        <ImageView
            android:id="@+id/fenmian"
            android:layout_width="274dp"
            android:layout_height="175dp"
            android:layout_marginTop="27.4dp"
            android:layout_marginStart="29.3dp"
            android:background="@drawable/bihuawenda"
            />



        <ImageButton
            android:id="@+id/game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_enter_04"
            android:layout_marginTop="162dp"
            android:layout_marginStart="115.5dp"
            />
        <TextView
            android:id="@+id/game_tv"
            android:layout_width="90dp"
            android:layout_height="16dp"
            android:layout_marginTop="172dp"
            android:layout_marginStart="121dp"
            android:textSize="12sp"
            android:textColor="#99000000"
            android:text="开始趣味游戏"
            android:gravity="center"/>




    </RelativeLayout>



</LinearLayout>